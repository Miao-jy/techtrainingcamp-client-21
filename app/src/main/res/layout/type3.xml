<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/type3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/type3_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type3_title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/teambuilding_04"/>

    <TextView
        android:id="@+id/type3_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type3_image"
        android:layout_marginRight="20dp"
        android:text="author" />

    <TextView
        android:id="@+id/type3_publishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type3_image"
        android:layout_toRightOf="@id/type3_author"
        android:text="publishment" />

</RelativeLayout>